{
  "name": "ledokku",
  "private": true,
  "repository": "https://github.com/ledokku/ledokku.git",
  "author": "pradel <pradel.leo@gmail.com>",
  "scripts": {
    "prettier": "prettier --write '**/*.{js,ts,tsx,md,css}'"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,css}": "prettier --write"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4"
  }
}
